    "homepage":    "https://github.com/ARCANEDEV/php-html",
    "keywords":    ["arcanedev", "html", "form", "tags"],
    "authors":     [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":                ">=7.2.0",
        "illuminate/support": "^6.0"
